@model Store.Web.ViewModels.RegisterRoleViewModel

<h1>Edit Role</h1>
@using (Html.BeginForm("Submit", "Role", FormMethod.Post))
{
    <div class="form-group">
        <label>ID</label>
        <br />

        @Html.TextBoxFor(model => model.ID, new { value = Model.ID })

    </div>
    <div class="form-group">
        <label>Role Name</label>
        <br />

        @Html.TextBoxFor(model => model.RoleName, new { value = Model.RoleName })
        @Html.ValidationMessageFor(m => m.RoleName, null, new { @class = "attribute-error" })
        @Html.ValidationMessage("UniqueRole", new { @class = "attribute-error" })

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>


    <button type="submit" class="btn btn-danger" formaction="@Url.Action("Delete", "Role", new { id = Model.ID })">
        Delete
    </button>
}

<style>
    .error-summary {
        color: red;
    }

    .attribute-error {
        display: block;
        color: red;
    }
</style>

