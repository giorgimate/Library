
@model List<Store.Model.Models.Roles>
@{
    ViewBag.Title = "Roles List";
}


    
    @using (Html.BeginForm("Search", "Role", FormMethod.Get))
    {
        @Html.TextBox("searching")<input type="submit" value="Search" />

    }


<h3><a href="http://localhost:3523/Role/RegisterRole">Register new Role</a></h3>
<h1>Roles</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var role in Model)
        {
            <tr>
                <td>@role.ID</td>
                <td>@role.RoleName</td>
                <td><a href="http://localhost:3523/Role/View/@role.ID" class="btn btn-primary">View</a></td>


            </tr>
        }
    </tbody>
</table>