
@model Store.Web.ViewModels.RegisterRoleViewModel
@{
    ViewBag.Title = "Register Role";
}
<h2>Register Publisher</h2>

@using (Html.BeginForm("RegisterRole", "Role", FormMethod.Post))
{

    <div class="form-group">
        <label>Role Name </label>
        <br />
        @Html.TextBoxFor(m => m.RoleName)
        @Html.ValidationMessageFor(m => m.RoleName, null, new { @class = "attribute-error" })
        @Html.ValidationMessage("UniqueRole", new { @class = "attribute-error" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
<style>
    .error-summary {
        color: red;
    }

    .attribute-error {
        display: block;
        color: red;
    }
</style>
