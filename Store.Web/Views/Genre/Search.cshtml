
@model List<Store.Model.Models.Genres>
@{
    ViewBag.Title = "Search List";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>

       
        @if(Model.Count() == 0)
            {
                <h1>no results</h1>
            }
        else {
        foreach (var genre in Model)
        {
            <tr>
                <td>@genre.ID</td>
                <td>@genre.Name</td>
                <td><a href="http://localhost:3523/Genre/View/@genre.ID" class="btn btn-primary">View</a></td>


            </tr>
        }
        }
    </tbody>
</table>