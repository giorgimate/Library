@model Store.Web.ViewModels.RegisterAuthorViewModel

<h1>Edit Author</h1>
@using (Html.BeginForm("Submit", "Author", FormMethod.Post))
{
    <div class="form-group">
        <label>ID</label>
        <br />

        @Html.TextBoxFor(model => model.ID, new { value = Model.ID })

    </div>
    <div class="form-group">
        <label>FirstName</label>
        <br />

        @Html.TextBoxFor(model => model.FirstName, new { value = Model.FirstName })

    </div>
    <div class="form-group">
        <label>LastName</label>
        <br />

        @Html.TextBoxFor(model => model.LastName, new { value = Model.LastName })

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>


    <button type="submit" class="btn btn-danger" formaction="@Url.Action("Delete", "Author", new { id = Model.ID })">
        Delete
    </button>
}



