
@model Store.Web.ViewModels.RegisterAuthorViewModel
@{
    ViewBag.Title = "Register Author";
}
<h2>Register Author</h2>

@using (Html.BeginForm("RegisterAuthor", "Author", FormMethod.Post))
{

    <div class="form-group">
        <label>FirstName</label>
        <br />
        @Html.TextBoxFor(m => m.FirstName)
        @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "attribute-error" })

    </div>
    <div class="form-group">
        <label>LastName</label>
        <br />
        @Html.TextBoxFor(m => m.LastName)
        @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "attribute-error" })

        @Html.ValidationMessage("UniqueAuthor", new { @class = "attribute-error" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}

<style>
    .error-summary {
        color: red;
    }

    .attribute-error {
        display:block;
        color: red;
    }
</style>

