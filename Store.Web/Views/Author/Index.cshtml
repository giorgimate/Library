
@model List<Store.Model.Models.Authors>
@{
    ViewBag.Title = "Authors List";
}


    
    @using (Html.BeginForm("Search", "Author", FormMethod.Get))
    {
        @Html.TextBox("searching")<input type="submit" value="Search" />

    }


<h3><a href="http://localhost:3523/Author/RegisterAuthor">Register new Author</a></h3>
<h1>Authors</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>LastName</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var author in Model)
        {
            <tr>
                <td>@author.ID</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td><a href="http://localhost:3523/Author/View/@author.ID" class="btn btn-primary">View</a></td>


            </tr>
        }
    </tbody>
</table>